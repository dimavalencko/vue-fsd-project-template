{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "types": ["vite/client"],

    /* Linting */
    "strict": true,                     // Включает ВСЕ строгие проверки
    "noImplicitAny": true,              // Запрещает неявный any
    "noImplicitReturns": true,          // Функция должна возвращать значение
    "noUnusedLocals": true,             // Ошибка на неиспользуемые переменные
    "noUnusedParameters": true,         // Ошибка на неиспользуемые параметры
    "noFallthroughCasesInSwitch": true, // Забыли break в switch? Ошибка!
    "erasableSyntaxOnly": false,
    "noUncheckedSideEffectImports": true,
    
    /* Алиасы для Visual Studio */
    "module": "ESNext",                   // Современные ES модули
    "moduleResolution": "Bundler",        // Для Vite/Rollup/Webpack
    "allowImportingTsExtensions": true,   // Разрешает import './file.ts'
    "resolveJsonModule": true,            // import data from './data.json' - для локализации
    "allowSyntheticDefaultImports": true, // import Component from 'component' вместо import * as Component

    "paths": {
      "@/*": ["./src/*"],
      "@app/*": ["./src/app/*"],
      "@pages/*": ["./src/pages/*"],
      "@features/*": ["./src/features/*"],
      "@entities/*": ["./src/entities/*"],
      "@shared/*": ["./src/shared/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}
